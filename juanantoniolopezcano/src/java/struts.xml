      <action name="mostrarTodos" class="controlador.acciones.listSinLogarAction">
            
            <result name="success">/vistas/listSinLogar.jsp</result>
                
        </action>
        
        
        <action name="login" class="controlador.acciones.listSinLogarAction">
            
            <result name="success">/vistas/login.jsp</result>
                
